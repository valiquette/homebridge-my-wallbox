{
	"compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ES2022"
    ],
		"allowJs": true,
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    //"eslint.config.js",
    "homebridge-ui",
    "src",
  ]
}